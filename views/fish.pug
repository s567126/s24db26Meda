extends layout

block content
    h1= title
    p Welcome to #{title}

    
    - let item =  results


        div(class = "container-fluid")
            div(class="row")
                each item, index in results
                    div(class="col-sm-2" onclick=`buy(${index})`)
                        ul
                            li  #{item.name}
                            li  #{item.life_span}
                            li  #{item.color}
                
                script.
                    function buy(index){
                        alert('You purchased item ' + index);
                    }