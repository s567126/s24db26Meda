extends layout

block content
    h1= title

    if (toShow == null)
        h2 No instance to delete
    else
        -let fishid = toShow._id
        -let name= toShow.name
        -let color = toShow.color
        -let life_span = toShow.life_span
        -let actionid = "/resource/deletefish/" + fishid


        script.
            let actionid = "#{actionid}"
        div
            div.row
                div(class='birdAttr mr-3') fish ID is:
                div #{birdid}
            div.row
                div(class='birdAttr mr-3') name is:
                div #{name}
            div.row
                div(class='birdAttr mr-3') color is:
                div #{color}
            div.row
                div(class='birdAttr mr-3') life_span is:
                div #{life_span}
        button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
        button(class="btn btn-secondary m-2" onclick="cancel()") Cancel

    script.
        function cancel() {
            // Go back to the home page for the bird collection
            window.location.href = '/fish'
            }
            
    script.
        function deleteOnid() {
            console.log("starting delete")

            // delete first
            fetch(actionid, {
                method: 'DELETE',
                // Don't need a body for the delete
            })
            .then((resp) => {
                return resp.text(); // or resp.text() or whatever the server sends
            })
            .then((body) => {
                alert("Delete succeded")
                window.location.href = '/fish'
                // TODO handle body
            })
            .catch((error) => {
                // TODO handle error
                alert("Delete failed " + error)
            });
        }