extends layout

block content
    h1= title
    

    if (toShow == null)
        h2 No instance to Show!
    else

        - let fishid = toShow._id
        - let name = toShow.name
        - let life_span = toShow.life_span
        - let color = toShow.color
        div
            div.row
                div(class='fishAttr mr-3') fish ID is:
                div #{fishid}
            div.row
                div(class='fishAttr mr-3') fish Type is:
                div #{name}
            div.row
                div(class='fishAttr mr-3') fish Size is:
                div #{life_span}
            div.row
                div(class='fishAttr mr-3') fish Cost is:
                div #{color}